{
  "command": {
    "publish": {
      "changelogPreset": {
        "name": "conventionalcommits",
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
      },
      "conventionalCommits": true,
      "ignoreChanges": ["CHANGELOG.md"],
      "message": "chore(release): publish"
    }
  },
  "npmClient": "yarn",
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
